	<#+

public static string? ToCamlCase(string value)
        {

            string retValue = null;
            if (value != null)
            {
                StringBuilder builder = new StringBuilder();
                value = value.Trim();

                if (value.Length == 1)
                {
                    builder.Append(value.ToLower());
                }
                else
                {
                    builder.Append(value.Substring(0, 1).ToLower());
                    builder.Append(value.Substring(1));
                }
                retValue = builder.ToString();
            }

            return retValue;
        }
#>